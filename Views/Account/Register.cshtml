@model NuevaAplicacionMVC.Models.RegisterModel
@{
    ViewBag.Title = "Registrarse";
}
<div class="titulo-registro">
    <h1>@ViewBag.Title.</h1>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset class="contenido-registro">
        <div class="panel panel-primary panel-tipo">
            <div class="panel-heading panel-cabeza text-center">
                <div class="">Formulario de registro</div>
            </div>
            <div class="panel-body">
                <ol>
                    <li>
                        @Html.LabelFor(m => m.UserName )
                        @Html.TextBoxFor(m => m.UserName, new { @class = "formulario-text" })
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "formulario-text" })
                    </li>
                    <li>
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "formulario-text" })
                    </li>
                </ol><hr>
                <input type="submit" value="Registrarse" class="btn btn-primary pull-right"/>
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
