<!DOCTYPE html>
<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title MMAnew</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/themes/font-awesome.css" rel="stylesheet" />
        <link href="~/Content/themes/sidebar-menu.css" rel="stylesheet" />
        <link href="~/Content/themes/estilo.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-3.1.1.min.js"></script>
        <script src="~/Scripts/sidebar-menu.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/funcines.js"></script>
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
                <nav class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="@Url.Action("index", "noticias")"><small class="letra1">MMA</small><small class="letra2">new</small></a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class=""><a href="@Url.Action("index", "Foro")">Foros <span class="sr-only">(current)</span></a></li>
                                <li><a href="#">Imagenes</a></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Eventos <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">Proximos</a></li>
                                        <li><a href="#">Actuales</a></li>
                                        <li><a href="#">Pasados</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="#">Favoritos</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="@Url.Action("CrearArticulo", "Noticias", new { id= "DayanMontero" })">Crear articulo</a></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Usuario<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        @Html.Partial("_LoginPartial")
                                        <li><a href="#">salir</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <form class="navbar-form navbar-right">
                                <div class="form-group">
                                    <input type="text" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-default">Buscar</button>
                            </form>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
        </header>
            @RenderSection("featured", required: false)
            <section class="main container body">
                <div class="row">
                        <aside class="col-md-2 hidden-xs hidden-sm contenido-izquierdo">
                            <div class="list-group">
                                <a href="#" class="list-group-item active">Noticias</a>
                                <a href="#" class="list-group-item">Mas vistas</a>
                                <a href="#" class="list-group-item">Peleadores</a>
                                <a href="#" class="list-group-item">Boxeo</a>
