                                <a href="#" class="list-group-item">Campamentos</a>
                                <a href="#" class="list-group-item">Compañeros</a>
                                <a href="#" class="list-group-item">Rankings</a>
                            </div>
                            <p>anuncio:</p>
                            <div class="contenedor-anuncio">
                                <img class="anuncio-pagina" src="http://www.anunciosinmobiliariosinternacionales.info/wp-content/uploads/2014/05/anunciosinmobiliariosinternacionales.jpg">
                            </div>
                        </aside>
                    <section class="ancho-7 contenido-principal">
                        <div class="cuerpo">
                            @RenderBody()
                        </div>
                    </section>
                    <aside class="col-md-3 hidden-xs hidden-sm contenido-derecho">
                        <p>anuncio:</p>
                        <div class="contenedor-anuncio">
                            <img class="anuncio-pagina" src="https://www.motorafondo.net/wp-content/2012/03/anuncio-nuevo-volkswagen-up.jpg">
                        </div>
                        <div class="list-group">
                            <h2 class="text-center reciente">Reciente</h2>
                            <a href="#" class="list-group-item active">Noticia</a>
