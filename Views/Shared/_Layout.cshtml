                            <a href="#" class="list-group-item">Peleas</a>
                            <a href="#" class="list-group-item">Grappling</a>
                            <a href="#" class="list-group-item">Campamentos</a>
                            <a href="#" class="list-group-item">Compañeros</a>
                            <a href="#" class="list-group-item">Rankings</a>
                        </div>
                    </aside>
                </div>
            </section>
        <footer>
            <div class="text-center">
                <div class="">
                    <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET MVC</p>
                </div>
            </div>
        </footer><!--<br><br><br><br><br><br><br><br>-->

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
