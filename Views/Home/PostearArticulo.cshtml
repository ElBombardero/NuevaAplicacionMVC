@{
    ViewBag.Title = "PostearArticulo";
}
<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script src="~/Scripts/tinymce/init-tinymce.js"></script>
<h2>PostearArticulo</h2>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Agregar producto</h2>
    </div>
    <div class="panel-body">
        <form action="NuevaNoticia" method="post" class="form-inline">
            <div class="input-group form-group">
                <span class="input-group-addon">Titulo</span>
                <input type="text" class="form-control" name="titulo">
            </div>
            <div class="input-group form-group pull-right">
                <input type="text" class="form-control" name="Imagen">
                <span class="input-group-addon">imagen</span>
            </div>
            <span class="input-group-addon">Contenido</span>
                <textarea class="tinymce" rows="40" name="Contenido"></textarea>
           <hr class="hr">
            <button type="submit" class="btn btn-primary pull-right">Publicar</button>
        </form>
    </div>
</div>
